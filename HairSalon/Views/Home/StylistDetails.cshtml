@{
    Layout = "_Layout";
}

<div class="container">
        <div class="jumbotron">
            <h2>@Model.GetName() Clients:</h2>
        </div>
            <button type="button" class="btn"><a href="/Client/@Model.GetId()">Add New Client:</a></button>
            <br>
            <br>
            <a href="/">Back to Employee List</a>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Client</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model!=null)
                        {
                            foreach(var Client in Model.GetClients())
                            {
                        <tr>
                            <td>@Client.GetName()</td>
                        </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <button type="button" class="btn"><a href="/Client/@Model.GetId()">Add Specialties:</a></button>
        <br>
        <br>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Specialties</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model!=null)
                        {
                            foreach(var Client in Model.GetClients())
                            {
                        <tr>
                            <td>@Client.GetName()</td>
                        </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <button type="button" class="btn"><a href="/">Back to Stylists</a></button>
    </div>
</div>
