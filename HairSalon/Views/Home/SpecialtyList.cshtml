@{
     Layout = "_Layout";
 }

<body>
    <div class="container">
        <div class="jumbotron">
            <h1>Full Specialty List</h1>
        </div>
        <br>
        <button type="button" class="btn"><a href="/Specialty">Add Specialties:</a></button>
    </div>
    </div>
    <br>
    <div class="container">
        <a href="/">Back to Employee List</a>
        <div class="card mb-3">
            <div class="card-header">
                <i class="fa fa-table"></i>Specialties</div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Name</th>

                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Name</th>

                            </tr>
                        </tfoot>
                        <tbody>
                            @if (Model!=null) { foreach(var Specialty in Model) {
                            <tr>
                                <td>@Specialty.GetSpecialtyName()</td>
                            </tr>
                            } }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
        </div>
    </div>
