@{
     Layout = "_Layout";
 }

<head>
    <title>HairSalon</title>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand">HairSalon</a>
            </div>
            <ul class="nav navbar-nav">
            </ul>
        </div>
    </nav>
</head>

<body>
    <div class="container">
        <div class="jumbotron">
            <h1>Hair Salon</h1>
        </div>
    <form id="submitItem" action = "/SaveClients" method = "post">
        <div class="form-group">
            <label for="name">Name of Client:</label>
            <input name="clientsname" type="text" class="form-control" id="">

        <button type="submit" class="btn btn-default">Add</button>
    </form>
    </div>
</div>
    <br>
    <div class="container">
        <div class="card mb-3">
            <div class="card-header">
                <i class="fa fa-table"></i> Data Table</div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Distict</th>
                                <th>Population</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Name</th>
                                <th>Distict</th>
                                <th>Population</th>
                            </tr>
                        </tfoot>
                        <tbody>
                                @if (Model!=null)
                                {
                                    foreach(var Stylist in Model)
                                    {
                                <tr>
                                    <td>@Stylist.GetClients()</td>
                                    <td></td>
                                    <td></td>
                                </tr>
                                    }
                                }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
        </div>
    </div>
    </div>
</body>

</html>
